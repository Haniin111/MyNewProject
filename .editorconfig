# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 120

# Markdown files
[*.md]
trim_trailing_whitespace = false
max_line_length = off

# YAML files
[*.{yml,yaml}]
indent_size = 2

# Docker Compose files
[docker-compose{,.*}.{yaml,yml}]
indent_size = 4

# Frontend files
[*.{js,jsx,ts,tsx,css,scss,vue}]
indent_size = 2
quote_type = single

# Blade templates
[*.blade.php]
indent_size = 2

# JSON files
[*.json]
indent_size = 2

# PHP files
[*.php]
indent_size = 4
max_line_length = 120

# Shell scripts
[*.sh]
end_of_line = lf

# Windows files
[*.{cmd,bat}]
end_of_line = crlf
